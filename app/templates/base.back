<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}网页建筑师{% endblock %}</title>
    <!-- 引入Bootstrap简化样式 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- 引入Font Awesome图标 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <!-- 自定义全局CSS -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/base.css') }}">
    {% block extra_css %}{% endblock %}
</head>
<body>
    <!-- 导航栏 -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="{{ url_for('main.index') }}">
                <i class="fa fa-code"></i> 网页建筑师
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% if current_user.is_authenticated %}
                        <!-- 学生导航 -->
                        {% if current_user.role == 'student' %}
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ url_for('main.game') }}">
                                    <i class="fa fa-gamepad"></i> 游戏中心
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ url_for('api.user_stats') }}" target="_blank">
                                    <i class="fa fa-bar-chart"></i> 我的进度
                                </a>
                            </li>
                        {% endif %}
                        <!-- 教师导航 -->
                        {% if current_user.role == 'teacher' %}
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ url_for('teacher.dashboard') }}">
                                    <i class="fa fa-tachometer"></i> 数据看板
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ url_for('teacher.student_list') }}">
                                    <i class="fa fa-users"></i> 学生管理
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ url_for('main.register') }}">
                                    <i class="fa fa-user-plus"></i> 创建学生账号
                                </a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url_for('main.logout') }}">
                                <i class="fa fa-sign-out"></i> 退出登录
                            </a>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link disabled">欢迎，{{ current_user.id }}</span>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ url_for('main.login') }}">
                                <i class="fa fa-sign-in"></i> 登录
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- 消息提示区域 -->
    <div class="container mt-3">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
    </div>

    <!-- 主要内容区域 -->
    <main class="container py-4">
        {% block content %}{% endblock %}
    </main>

    <!-- 页脚 -->
    <footer class="bg-dark text-white py-3 mt-5">
        <div class="container text-center">
            <p class="mb-0">© 2025 网页建筑师 | 基于网络的HTML/CSS严肃游戏教学平台</p>
        </div>
    </footer>

    <!-- 引入Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- 自定义全局JS -->
    <script src="{{ url_for('static', filename='js/base.js') }}"></script>
    {% block extra_scripts %}{% endblock %}
</body>
</html>